{
  "name": "chaos-engineering-backend",
  "version": "1.0.0",
  "description": "Backend API for Chaos Engineering Platform",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "lint": "eslint src --ext .ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "package": "npm run build && npm run package:functions",
    "package:functions": "cd dist && zip -r ../lambda-functions.zip .",
    "deploy": "npm run build && npm run package && aws cloudformation deploy --template-file ../../infrastructure/fullstack-backend.yaml --stack-name chaos-backend-api --capabilities CAPABILITY_IAM"
  },
  "keywords": [
    "chaos-engineering",
    "aws",
    "lambda",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.645.0",
    "@aws-sdk/client-step-functions": "^3.645.0",
    "@aws-sdk/client-cloudwatch": "^3.645.0",
    "@aws-sdk/client-ec2": "^3.645.0",
    "@aws-sdk/client-elastic-load-balancing-v2": "^3.645.0",
    "@aws-sdk/client-auto-scaling": "^3.645.0",
    "@aws-sdk/client-cognito-identity-provider": "^3.645.0",
    "@aws-sdk/lib-dynamodb": "^3.645.0",
    "@aws-sdk/util-dynamodb": "^3.645.0",
    "aws-lambda": "^1.0.7",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^10.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.145",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.14.15",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "serverless-offline": "^14.0.0",
    "ts-jest": "^29.2.4",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.4"
  }
}
